<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/listefragment"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        class="com.example.visfiler.ListeFragment"
        tools:layout="@layout/liste_layout"/>
    <fragment
        android:id="@+id/scriptfragment"
        android:layout_width="0dp"
        android:layout_weight="2"

        android:layout_height="match_parent"
        class="com.example.visfiler.VisScriptFragment"
        tools:layout="@layout/visfil_layout"/>

</LinearLayout>