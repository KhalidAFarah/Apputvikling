<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/contender_4"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:padding="20dp"


        app:layout_constraintBottom_toTopOf="@+id/btnstartspill"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rounded_rectangle"/>

    <ImageButton
        android:id="@+id/btnstartspill"
        android:layout_width="230dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_rectangle"
        android:foregroundGravity="center"
        android:src="@drawable/play_3"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <ImageButton
        android:id="@+id/btnstatistikk"
        android:layout_width="100dp"
        android:layout_height="100dp"


        android:background="@drawable/round_buttons"
        android:src="@drawable/statistics_2"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnpreferanse"
        app:layout_constraintHorizontal_bias="0.441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnstartspill"
        app:layout_constraintVertical_bias="0.316" />

    <ImageButton
        android:id="@+id/btnpreferanse"
        android:layout_width="100dp"
        android:layout_height="100dp"


        android:background="@drawable/round_buttons"
        android:src="@drawable/gear_new_4"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnstatistikk"
        app:layout_constraintTop_toBottomOf="@+id/btnstartspill"
        app:layout_constraintVertical_bias="0.316" /><!--android:text="@string/btn_preferanser"-->
</android.support.constraint.ConstraintLayout>